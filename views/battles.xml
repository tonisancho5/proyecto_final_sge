<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="empires_of_legends.battle_tree">
      <field name="name">empires_of_legends list</field>
      <field name="model">empires_of_legends.battle</field>
      <field name="arch" type="xml">
        <tree >
          <field name="name"/>
          <field name="date_start"/>
          <field name="date_end"/>
          <field name="distance"/>
          <field name="time"/>
          <field name="progress" widget="progressbar"/>
          <field name="player1"/>
          <field name="player2"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="empires_of_legends.battle_form">
      <field name="name">empires_of_legends form</field>
      <field name="model">empires_of_legends.battle</field>
      <field name="arch" type="xml">
        <form >
          <header>
            <button name="launch_battle"
                    type="object"
                    string="Launch Battle"
                    class="btn btn-primary"

            ></button>
            <button name="back"
                    type="object"
                    string="Back"
                    class="btn btn-primary"

            ></button>
            <button name="simulate_battle"
                    type="object"
                    string="Simulation"
                    class="btn btn-primary"

            ></button>

            <field name="state" widget="statusbar" />
          </header>
          <sheet><group>
            <group>
              <field name="name"/>
              <field name="date_start"/>
              <field name="date_end"/>
              <field name="distance"/>
              <field name="time"/>
              <field name="progress" widget="progressbar"/>
            </group>
            <group>
              <field name="player1"/>
              <field name="player2"/>
              <field name="village1"/>
              <field name="village2"/>
            </group>
          </group>
            <notebook>
              <page string="troops">
                <group>
                  <field name="troop1_list">
                    <tree>
                      <field name="name"/>
                      <field name="qty"/>
                    </tree>
                  </field>
                  <field name="troop1_available">
                    <tree>
                      <field name="name"/>
                      <field name="qty"/>
                      <field name="fabrications"/>
                      <field name="fabrications_queue"/>
                      <button name="add_to_battle"
                              type="object"
                              string="Add"
                              class="btn btn-primary"
                              context="{'ctx_battle':parent.id}"
                      ></button>
                    </tree>
                  </field>
                </group>
              </page></notebook>

          </sheet>


        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="empires_of_legends.battle_calendar">
      <field name="name">empires_of_legends list</field>
      <field name="model">empires_of_legends.battle</field>
      <field name="arch" type="xml">
        <calendar string="Battle Calendar"
                  date_start="date_start"
                  date_stop="date_end"
                  color = "player1"
        >
          <field name="name"/>

          <field name="player1"/>
          <field name="player2"/>
        </calendar>
      </field>
    </record>


    <record model="ir.ui.view" id="empires_of_legends.battle_wizard_form">
      <field name="name">empires_of_legends form</field>
      <field name="model">empires_of_legends.battle_wizard</field>
      <field name="arch" type="xml">
        <form >
          <header>
            <button name="action_previous" type="object"
                                string="Previous"
                                states="2,3"/>
            <button name="action_next" type="object"
                                string="Next" states="1,2"
                                class="oe_highlight"/>
            <field name="state" widget="statusbar" />
          </header>
          <sheet>

            <group states="1">
              <field name="name"/>
              <field name="date_start"/>
              <field name="player1"
                     domain="[('is_player','=',True)]"
              />
              <field name="village1"/>
            </group>

            <group states="2">
              <field name="player2"
                     domain = "[('id','!=',context.get('player1_context',[])),('is_player','=',True)]"
              />
              <field name="village2"/>
              <field name="date_end"/>
              <field name="distance"/>
              <field name="time"/>
            </group>



                <group states="1">
                  <field name="troop1_list">
                    <tree>
                      <field name="name"/>
                      <field name="qty"/>
                    </tree>
                  </field>
                  <field name="troop1_available">
                    <tree>
                      <field name="name"/>
                      <field name="qty"/>
                      <field name="fabrications"/>
                      <field name="fabrications_queue"/>
                      <button name="add_to_battle_wizard"
                              type="object"
                              string="Add"
                              class="btn btn-primary"
                              context="{'ctx_battle':parent.id}"
                      ></button>
                    </tree>
                  </field>
                </group>

            <group states="3">
               <field name="player1_resume"></field>
               <field name="player2_resume"></field>
            </group>
          </sheet>
<footer >

      <button states="3" name="create_battle" type="object"
                                string="Create" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
</footer>

        </form>
      </field>
    </record>

    <record id="empires_of_legends.battle_wizard_action" model="ir.actions.act_window">
      <field name="name">Create battle</field>
      <field name="res_model">empires_of_legends.battle_wizard</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
    </record>
  </data>
</odoo>